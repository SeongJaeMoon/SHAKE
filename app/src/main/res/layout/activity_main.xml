<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.cap.shake.MainActivity">

    <android.support.v7.widget.Toolbar
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_below="@+id/toolbar"
        android:id="@+id/presented_by"
        android:text="@string/presented_by"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_below="@+id/toolbar"
        android:layout_toRightOf="@+id/presented_by"
        android:id="@+id/gis_image"
        android:src="@drawable/gis"
        />
    <View
        android:id="@+id/seperator1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/green"
        android:layout_below="@+id/presented_by">
    </View>

    <TextView
        android:id="@+id/text_uni_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seperator1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="80dp"
        android:textSize="20sp"
        android:text="@string/uni_station"/>

    <com.sackcentury.shinebuttonlib.ShineButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/text_uni_station"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        android:src="@android:color/darker_gray"
        android:id="@+id/uni_station"
        app:btn_color="@android:color/darker_gray"
        app:btn_fill_color="#FF6666"
        app:allow_random_color="true"
        app:enable_flashing="true"
        app:big_shine_color="#FF6666"
        app:click_animation_duration="200"
        app:shine_animation_duration="1500"
        app:shine_turn_angle="10"
        app:small_shine_offset_angle="20"
        app:small_shine_color="#CC9999"
        app:shine_count="8"
        app:siShape="@raw/star"/>

    <TextView
        android:id="@+id/text_station_uni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seperator1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="230dp"
        android:textSize="20sp"
        android:text="@string/station_uni"/>

    <com.sackcentury.shinebuttonlib.ShineButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/text_station_uni"
        android:layout_marginTop="10dp"
        android:layout_marginStart="230dp"
        android:src="@android:color/darker_gray"
        android:id="@+id/station_uni"
        app:btn_color="@android:color/darker_gray"
        app:btn_fill_color="#FF6666"
        app:allow_random_color="true"
        app:enable_flashing="true"
        app:big_shine_color="#FF6666"
        app:click_animation_duration="200"
        app:shine_animation_duration="1500"
        app:shine_turn_angle="10"
        app:small_shine_offset_angle="20"
        app:small_shine_color="#CC9999"
        app:shine_count="8"
        app:siShape="@raw/star"/>
    <View
        android:id="@+id/seperator2"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="2dp"
        android:background="@color/green"
        android:layout_below="@+id/uni_station">
    </View>

    <TextView
        android:id="@+id/text_seocho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seperator2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="80dp"
        android:textSize="20sp"
        android:text="@string/seocho"/>

    <com.sackcentury.shinebuttonlib.ShineButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/text_seocho"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        android:src="@android:color/darker_gray"
        android:id="@+id/uni_seocho"
        app:btn_color="@android:color/darker_gray"
        app:btn_fill_color="#FF6666"
        app:allow_random_color="true"
        app:enable_flashing="true"
        app:big_shine_color="#FF6666"
        app:click_animation_duration="200"
        app:shine_animation_duration="1500"
        app:shine_turn_angle="10"
        app:small_shine_offset_angle="20"
        app:small_shine_color="#CC9999"
        app:shine_count="8"
        app:siShape="@raw/star"/>

    <TextView
        android:id="@+id/text_dongseoul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uni_seocho"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:textSize="20sp"
        android:text="@string/dongseoul"/>

    <com.sackcentury.shinebuttonlib.ShineButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/text_dongseoul"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        android:src="@android:color/darker_gray"
        android:id="@+id/uni_dongseoul"
        app:btn_color="@android:color/darker_gray"
        app:btn_fill_color="#FF6666"
        app:allow_random_color="true"
        app:enable_flashing="true"
        app:big_shine_color="#FF6666"
        app:click_animation_duration="200"
        app:shine_animation_duration="1500"
        app:shine_turn_angle="10"
        app:small_shine_offset_angle="20"
        app:small_shine_color="#CC9999"
        app:shine_count="8"
        app:siShape="@raw/star"/>

    <TextView
        android:id="@+id/text_seongnam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seperator2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="230dp"
        android:textSize="20sp"
        android:text="@string/seongnam"/>

    <com.sackcentury.shinebuttonlib.ShineButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/text_seongnam"
        android:layout_marginTop="10dp"
        android:layout_marginStart="230dp"
        android:src="@android:color/darker_gray"
        android:id="@+id/uni_seongnam"
        app:btn_color="@android:color/darker_gray"
        app:btn_fill_color="#FF6666"
        app:allow_random_color="true"
        app:enable_flashing="true"
        app:big_shine_color="#FF6666"
        app:click_animation_duration="200"
        app:shine_animation_duration="1500"
        app:shine_turn_angle="10"
        app:small_shine_offset_angle="20"
        app:small_shine_color="#CC9999"
        app:shine_count="8"
        app:siShape="@raw/star"/>

    <TextView
        android:id="@+id/text_Incheon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uni_seongnam"
        android:layout_marginTop="10dp"
        android:layout_marginStart="230dp"
        android:textSize="20sp"
        android:text="@string/Incheon"/>

    <com.sackcentury.shinebuttonlib.ShineButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/text_Incheon"
        android:layout_marginTop="10dp"
        android:layout_marginStart="230dp"
        android:src="@android:color/darker_gray"
        android:id="@+id/uni_incheon"
        app:btn_color="@android:color/darker_gray"
        app:btn_fill_color="#FF6666"
        app:allow_random_color="true"
        app:enable_flashing="true"
        app:big_shine_color="#FF6666"
        app:click_animation_duration="200"
        app:shine_animation_duration="1500"
        app:shine_turn_angle="10"
        app:small_shine_offset_angle="20"
        app:small_shine_color="#CC9999"
        app:shine_count="8"
        app:siShape="@raw/star"/>

    <Button
        android:id="@+id/notify_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_marginStart="150dp"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="@string/start"/>

</RelativeLayout>
